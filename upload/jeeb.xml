<?xml version="1.0" encoding="UTF-8" ?>

<extension version="2.6" type="plugin" group="vmpayment" method="upgrade">
    <name>VM Payment - Jeeb</name>
    <creationDate>July 27 2012</creationDate>
    <author>Jeeb</author>
    <authorUrl>http://www.jeeb.io</authorUrl>
    <copyright>Copyright</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>3.0.0</version>
    <description>Jeeb payment plugin</description>
    <files>
        <filename plugin="jeeb">jeeb.php</filename>
        <folder>language</folder>
    </files>
    <params addpath="/administrator/components/com_virtuemart/elements">

        <param name="merchant_apikey" type="text"  label="Signature" description="The signature provided by Jeeb for you merchant." />
        <param name="network" type="list" default="live" label="Allow TestNets"
           description="Allows testnets such as TBTC to get processed.">
            <option value="test">YES</option>
            <option value="live">NO</option>
        </param>
        <param name="allowRefund" type="list" default="yes" label="Allow Refund"
           description="Allows payments to be refunded.">
            <option value="yes">YES</option>
            <option value="no">NO</option>
        </param>
        <param name="baseCur" type="list" default="btc" label="Base Currency"
           description="The base currency of your website.">
            <option value="btc">BTC</option>
            <option value="eur">EUR</option>
            <option value="irr">IRR</option>
            <option value="toman">TOMAN</option>
            <option value="usd">USD</option>
        </param>
        <param name="targetCur" type="text" default="btc/test-btc" label="Payable Currencies"
           description="The currencies which users can use for payments.">
        </param>
        <param name="expiration" type="text"  label="Expiration Time" description="Expands default payments expiration time. It should be between 15 to 2880 (mins)." />
        <param name="lang" type="list" default="none" label="Language"
           description="The language of the payment area.">
            <option value="none">AUTO-SELECT</option>
            <option value="en">ENGLISH</option>
            <option value="fa">PERSIAN</option>
        </param>
    </params>
    <config>
        <fields name="params">
            <fieldset name="basic">
                    <field name="merchant_apikey" type="text" label="Signature" description="The signature provided by Jeeb for you merchant."/>

                    <field name="network" type="list" default="live" label="Allow TestNets"
                       description="Allows testnets such as TBTC to get processed.">
                        <option value="test">YES</option>
                        <option value="live">NO</option>
                    </field>
                    <field name="allowRefund" type="list" default="yes" label="Allow Refund"
                       description="Allows payments to be refunded.">
                        <option value="yes">YES</option>
                        <option value="no">NO</option>
                    </field>
                    <field name="baseCur" type="list" default="btc" label="Base Currency"
                       description="The base currency of your website.">
                       <option value="btc">BTC</option>
                       <option value="irr">EUR</option>
                       <option value="eur">IRR</option>
                       <option value="usd">USD</option>
                    </field>
                    <field name="targetCur" type="text" default="btc/test-btc" label="Payable Currencies"
                       description="The currencies which users can use for payments.">
                    </field>
                    <field name="expiration" type="text" label="Expiration" description="Expands default payments expiration time. It should be between 15 to 2880 (mins)."/>
                    <field name="lang" type="list" default="none" label="LANGUAGE"
                       description="The language of the payment area.">
                       <option value="none">AUTO-SELECT</option>
                       <option value="en">ENGLISH</option>
                       <option value="fa">PERSIAN</option>
                    </field>
                    <field name="payment_logos" type="vmfiles"  multiple="true" label="VMPAYMENT_JEEB_LOGO"
                      description="VMPAYMENT_JEEB_LOGO"
                      directory="/images/stories/virtuemart/payment"
                      default="default" hide_default="1" hide_none="1"
                      stripext="0" exclude="^_"/>
            </fieldset>
        </fields>
    </config>
</extension>
